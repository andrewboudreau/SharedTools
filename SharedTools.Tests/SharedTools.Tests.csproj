<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    
    <!-- NuGet Package Information -->
    <IsPackable>true</IsPackable>
    <PackageId>SharedTools.Tests</PackageId>
    <Version>1.0.0</Version>
    <Authors>Andrew Boudreau</Authors>
    <Description>Shared testing tools and utilities</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/andrewboudreau/SharedTools</RepositoryUrl>
    <PackageTags>testing;utilities</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md" Link="README.md" />
  </ItemGroup>

</Project>
